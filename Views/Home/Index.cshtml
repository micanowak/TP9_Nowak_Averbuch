<!-----------------------------------------------------------RESERVA---------------------------------------------------------------------------------->

<body>
<div class="container reservarTurno centroo centerito center">
    <div class="card-body fondoVerde specialFont interletrado ml-5" style="width: 18rem;">
      <p class="sizeL text-white">Reservar Turno</p>
      <button type="button" class="btn btn-light sizeL" data-toggle="modal" data-target=".bd-example-modal-lg">Formulario</button>
      <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <form method="post" action='@Url.Action("GuardarReserva","Home")' enctype="multipart/form-data"
              class="formReserva" name="formReservar">
              <p>
                Fecha de Ingreso <br />
                <input type="date" name="fechaIN" />
                <br />
                <br />
                Fecha de Salida <br />
                <input type="date" name="fechaOUT" />
                <br />
                <br />
                <label for="fkHotel">¿Qué Hotel buscas?</label><br />
                <select name="fkHotel" id="fkHotel">
                  <option value="1">Pura Vida México</option>
                  <option value="2">Pura Vida Costa Rica</option>
                  <option value="3">Pura Vida Panamá</option>
                </select>
                <br />
                <br />
                <label for="fkHabitacion">¿Qué Habitación quieres?</label><br />
                <select name="fkHabitacion" id="fkHabitacion">
                  <option value="1">Ron</option>
                  <option value="2">Wine</option>
                  <option value="3">Flow</option>
                </select>

                <br />
                Nombre Completo <br />
                <input type="text" name="Nombre" />
                <br />
                <br />
                DNI <br />
                <input type="number" name="DNI" />
                <br />
                <br />
                <input type="submit" value="Guardar">
              </p>
            </form>
          </div>
        </div>
      </div>
    </div>
 </div>
  </div>
  </div>


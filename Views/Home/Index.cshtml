@{
  ViewData["Title"] = "Home Page";


<!doctype html>
<html lang="en">
<!-----------------------------------------------------------RESERVA---------------------------------------------------------------------------------->

<body>
  <div class="container reservarTurno centroo centerito center">
    <div class="card-body fondoVerde specialFont interletrado ml-5">
      <p class="sizeL text-white">Reservar Turno</p>
      <button type="button" class="btn btn-light sizeL" data-toggle="modal"
        data-target=".bd-example-modal-lg">Formulario</button>
      <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <form method="post" action='@Url.Action("GuardarReserva","Home")' enctype="multipart/form-data"
              class="formReserva" name="formReservar">
              <p>
                Fecha de Ingreso <br />
                <input type="date" name="fechaIN" />
                <br />
                <br />
                Fecha de Salida <br />
                <input type="date" name="fechaOUT" />
                <br />
                <br />
                <label for="fkHotel">¿Qué Hotel buscas?</label><br />
                <select name="fkHotel" id="fkHotel">
                  <option value="1">Pura Vida México</option>
                  <option value="2">Pura Vida Costa Rica</option>
                  <option value="3">Pura Vida Panamá</option>
                </select>
                <br />
                <br />
                <label for="fkHabitacion">¿Qué Habitación quieres?</label><br />
                <select name="fkHabitacion" id="fkHabitacion">
                  <option value="1">Ron</option>
                  <option value="2">Wine</option>
                  <option value="3">Flow</option>
                </select>

                <br />
                Nombre Completo <br />
                <input type="text" name="Nombre" />
                <br />
                <br />
                DNI <br />
                <input type="number" name="DNI" />
                <br />
                <br />
                <input type="submit" value="Guardar">
              </p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>


  <!-----------------------------------------------------------CAROUSEL FOTOS MUESTRA---------------------------------------------------------------------------------->
  <div class="container justify-content-center specialFont">
    <div class="container-md border m-2">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/hall.jpg" class="d-block w-100" style="height: 40rem; width: auto" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/pileta.jpg" class="d-block w-100" style="height: 40rem; width: auto" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/edificio.jpg" class="d-block w-100" style="height: 40rem; width: auto" alt="...">
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="sr-only">Previous</span> <span class="carousel-control-prev-icon" aria-hidden="true"></span>

          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>

    <div class="container m-3 justify-content-center mx-auto">
      <img src="/LogoNegro.png" class="d-flex justify-content-center mx-auto" style="width: 18%; height: auto">

    </div>
    <!-----------------------------------------------------------DESCRIPCIÓN EMPRESA---------------------------------------------------------------------------------->

    <div class="container border justify-content-center interletrado">
      <p class="d-inline-flex p-2 b d-highlight display-4 text-center specialFont"
        style="color: #487c5c; text-shadow: 1px 2px black;">Vení a disfrutar de una experiencia totalmente inolvidable!
      </p>
    </div>
    <!-----------------------------------------------------------CARDS HOTELES---------------------------------------------------------------------------------->
    <div class="container mt-5 specialFont">
      <div class="row rowa">
       
          @foreach (Hotel item in ViewBag.ListaHoteles)
          {
            <div class="col-md-3 col-12">
              <div class="card">
                <img src='/@item.Imagen' class="card-img-top" style="height: 15rem; width: auto" alt="...">
                <div class="card-body">
                  <h2 class=" card-title">@item.Nombre</h2>
                  <h6>@item.Descripcion</h6>
                <a href="#" class="btn fondoVerde m-3  text-white">Go</a>
                </div>
              </div>
            </div>
          }

      </div>
    </div>
          
    
    <!-------------------------------------------------------------CAROUSEL RESEÑAS-------------------------------------------------------------------------------->
    <div class="container border mt-5 align-middle specialFont">
      <div id="carouselExampleControls" class="carousel slide justify-content-center" data-ride="carousel">
        <div class="carousel-inner text-center">
          <div class="carousel-item active ">
            <img src="/resena1.png" class="img-fluid">
          </div>
          <div class="carousel-item">
            <img src="/resena2.png" class="img-fluid">
          </div>
          <div class="carousel-item">
            <img src="/resena3.png" class="img-fluid">
          </div>

        </div>



        <div class="modal fade" id="ModalHotel" tabindex="-1" aria-labelled by="exampleModalLabel" aria-hidden="true">
          <div class=" modal-dialog">
            <div class=" modal-content">
              <div class=" modal-header">
                <h5 class=" modal-title" id="nombreHotel"> Modal title </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria - hidden="true"> & times ; </span>
                </button>
              </div>
              <div class=" modal - body ">
              </div>

            </div>
            <div class=" modal-footer ">
              <button type=" button " class="b btn-secondary " data-dismiss="modal"> Close </button>
            </div>
          </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
          integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
          crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
          integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
          crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
          integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
          crossorigin="anonymous"></script>

</body>


</html>
}